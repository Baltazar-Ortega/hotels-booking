# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /todo               controllers.Application.todo
GET     /reservacion                controllers.Application.reservacion
GET     /menor                controllers.Application.menor
GET     /estrellas                controllers.Application.estrellas
GET     /configuracion                controllers.Application.configuracion
GET     /                           controllers.Application.index
GET     /db                         controllers.Application.db
GET     /hotel1                      controllers.Application.hotel1
GET     /hotel3                      controllers.Application.hotel3
GET     /admin                      controllers.Application.admin
POST     /hotelPost                controllers.Application.hotelData


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
